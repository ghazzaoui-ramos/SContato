@model ContatoModel
@{
    ViewData["Title"] = "Confirmaçao de Apagar Contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary w-100 mb-3" role="button" asp-action="Index" asp-controller="Contato">Cancelar Exclusão</a>
<a class="btn btn-danger w-100" role="button" asp-action="Apagar" asp-route-id="@Model.Id" asp-controller="Contato">Confimar Exclusão</a>