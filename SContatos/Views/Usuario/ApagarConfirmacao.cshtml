@model UsuarioModel
@{
    ViewData["Title"] = "Confirmaçao de Apagar Usuario";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuario (@Model.Name)?</h3>
</div>

<a class="btn btn-primary w-100 mb-3" role="button" asp-action="Index" asp-controller="Usuario">Cancelar Exclusão</a>
<a class="btn btn-danger w-100" role="button" asp-action="Apagar" asp-route-id="@Model.Id" asp-controller="Usuario">Confimar Exclusão</a>